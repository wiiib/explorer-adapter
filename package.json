{
  "name": "@wiiib/explorer-adapter",
  "description": "Adapter for generating urls for different web3 explorers",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "author": "Pavel Yankovski <https://github.com/pyncz>",
  "keywords": [
    "typescript",
    "web3",
    "ethereum",
    "utils"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lintfix": "nr lint --fix",
    "test": "vitest run",
    "semantic-release": "semantic-release"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./resolvers": {
      "import": "./dist/resolvers.mjs",
      "require": "./dist/resolvers.cjs",
      "types": "./dist/resolvers.d.ts"
    },
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@voire/type-utils": "^1.2.0",
    "ufo": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.2",
    "@antfu/ni": "^0.17.2",
    "eslint": "^8.23.0",
    "lint-staged": ">=10",
    "semantic-release": "^19.0.2",
    "simple-git": "^3.17.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.8.4",
    "unbuild": "^1.1.2",
    "vitest": "^0.24.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiiib/explorer-adapter"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "nr lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ]
  }
}
