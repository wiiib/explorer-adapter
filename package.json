{
  "name": "@wiiib/explorer-adapter",
  "description": "Adapter for generating urls for different web3 explorers",
  "version": "0.0.0-development",
  "license": "MIT",
  "type": "module",
  "author": "Pavel Yankovski <https://github.com/pyncz>",
  "keywords": [
    "typescript",
    "web3",
    "utils"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lintfix": "nr lint --fix",
    "test": "vitest run",
    "semantic-release": "semantic-release"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.2",
    "@antfu/ni": "^0.17.2",
    "eslint": "^8.23.0",
    "lint-staged": ">=10",
    "semantic-release": "^19.0.2",
    "simple-git": "^2.47.0",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.8.4",
    "unbuild": "^0.7.4",
    "vitest": "^0.24.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiiib/explorer-adapter"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "nr lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ]
  }
}
